@model PolyViewModel

@await Html.PartialAsync("~/Areas/Admins/Views/Shared/_MenuForAdminPanel.cshtml")

<h1>Админ. панель > Поликлиники</h1>


<br /><br />


     <div class="container">
        <div class="d-flex">
        <h4>Поиск по значению: @ViewBag.SearchedPoly</h4>

    @if (ViewBag.SearchedPoly != null)
    {
        <a style="margin-left: 10px" class="btn btn-outline-success" asp-action="ClearSearch" asp-controller="DataWorkerPoly"> Очистить</a>
    }
    else
    {
    <form class="d-flex" role="search" asp-action="SearchByTitle" asp-controller="DataWorkerPoly">
        <input asp-for="@Model.Title" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" value="@ViewBag.SearchedPoly">
        <button class="btn btn-outline-success" type="submit">Search</button>
        <a class="btn btn-outline-success" asp-action="ClearSearch" asp-controller="DataWorkerPoly"> Очистить</a>
      </form>
    }
    </div>
    </div>

<table class="table table-hover">
        <thead>
        <tr class="table-light"><th>Id</th><th>Название поликлиники</th><th>Город</th><th>Адрес</th><th>Телефон</th><th>Фото</th>
            <th>Врачи</th>
            <td>
            <a asp-action="AddPoly" asp-controller="DataWorkerPoly"><b>Добавить поликлинику</b></a>
            </td>
        </tr>
        </thead>
  <tbody class="table-group-divider">
            @foreach(var poly in Model.Polyclinics)
            {
               <tr class="table-light">
                <td>
                    @poly.Id
                </td>
                <td>
                    @poly.Title
                </td>
                <td>
                    @poly.City?.Title
                </td>
                <td>
                    @poly.Adress
                </td>
                <td>
                    @poly.Phone
                </td>
                <td class="col-md-2">
                    <img style="width:100%" src="@poly.Photo"/>
                </td>
                <td>
                    @foreach(var doc in poly.Doctors)
                    {
                        <p>@doc.FIO</p>
                    }
                </td>
                <td><a asp-action="EditPoly" asp-controller="DataWorkerPoly" asp-route-polyId="@poly.Id">Изменить</a></td>
                <td>
                <form method="post" asp-controller="DataWorkerPoly" asp-action="RemovePoly"  asp-route-polyId="@poly.Id">
                    <input type="submit" value="Удалить"/>
                </form>
                </td>
                </tr>
            }
        </table>
                        <br /><br /><br />

        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
        @if (Model.pageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorkerPoly" asp-route-page="@(Model.pageViewModel.PageNumber - 1)">
                Назад
            </a>
            </li>
        }

        @for (int i = 1; i <= Model.pageViewModel.TotalPages; i++)
        {
            if (Model.pageViewModel.PageNumber == i)
            {
                <li class="page-item active"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorkerPoly" asp-route-page="@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorkerPoly" asp-route-page="@i">@i</a></li>  
            }
        }

        @if (Model.pageViewModel.HasNextPage)
        {
          <li class="page-item"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorkerPoly" asp-route-page="@(Model.pageViewModel.PageNumber + 1)">Вперед</a></li>
        }
          </ul>
        </nav>
