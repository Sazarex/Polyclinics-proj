@model CityViewModel

@await Html.PartialAsync("~/Areas/Admins/Views/Shared/_MenuForAdminPanel.cshtml")
<h1>Админ. панель > Города</h1>

<br /><br />

    <div class="container">
        <div class="d-flex">
        <h4>Поиск по значению: @ViewBag.SearchedCity</h4>

    @if (ViewBag.SearchedCity != null)
    {
        <a style="margin-left: 10px" class="btn btn-outline-success" asp-action="ClearSearch" asp-controller="DataWorker"> Очистить</a>
    }
    else
    {
    <form class="d-flex" role="search" asp-action="SearchByTitle" asp-controller="DataWorker">
        <input asp-for="@Model.Title" class="form-control me-2" type="search" placeholder="Search" aria-label="Search" value="@ViewBag.SearchedCity">
        <button class="btn btn-outline-success" type="submit">Search</button>
        <a class="btn btn-outline-success" asp-action="ClearSearch" asp-controller="DataWorker"> Очистить</a>
      </form>
    }
    </div>
    </div>

<table class="table table-hover">
        <thead>
        <tr class="table-light"><th>Id</th><th>Название города</th><th>Поликлиники города</th><td></td><td>
            <a asp-action="AddCity" asp-controller="DataWorker"><b>Добавить город</b></a></td></tr>
        </thead>
  <tbody class="table-group-divider">
            @foreach(var city in Model.Cities)
            {
               <tr class="table-light">
                <td>
                    @city.CityId
                </td>
                <td>
                    @city.Title
                </td>
                <td>
                    @foreach(var poly in city.Polyclinics)
                    {
                        @poly.Title
                        <br />
                    }
                </td>
                <td><a asp-action="EditCity" asp-controller="DataWorker" asp-route-CityId="@city.CityId">Изменить</a></td>
                <td>
                <form method="post"  asp-controller="DataWorker" asp-action="RemoveCity"  asp-route-CityId="@city.CityId">
                    <input type="submit" value="Удалить"/>
                </form>
                </td>
                </tr>
            }
        </table>

        <br /><br /><br />


        <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
        @if (Model.pageViewModel.HasPreviousPage)
        {
            <li class="page-item">
                <a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorker" asp-route-page="@(Model.pageViewModel.PageNumber - 1)">
                Назад
            </a>
            </li>
        }

        @for (int i = 1; i <= Model.pageViewModel.TotalPages; i++)
        {
            if (Model.pageViewModel.PageNumber == i)
            {
                <li class="page-item active"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorker" asp-route-page="@i">@i</a></li>
            }
            else
            {
                <li class="page-item"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorker" asp-route-page="@i">@i</a></li>  
            }
        }

        @if (Model.pageViewModel.HasNextPage)
        {
          <li class="page-item"><a class="page-link" asp-action="SearchByTitle" asp-controller="DataWorker" asp-route-page="@(Model.pageViewModel.PageNumber + 1)">Вперед</a></li>
        }
          </ul>
        </nav>
 
